server {
    listen ${PORT};
    server_name localhost;

    root /usr/share/nginx/html;
    index index.html;

    # React Router support
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Runtime config
    location /config.js {
        default_type application/javascript;
        return 200 'window.__RUNTIME_CONFIG__={API_BASE:"${BACKEND_URL}/api"};';
    }
}
